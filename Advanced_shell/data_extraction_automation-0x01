#!/bin/bash

# Extract the name, height (in meters), weight (in kg), and type from data.json using jq

# Get name, height, weight, and first type
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')   # Capitalize
HEIGHT=$(jq '.height' data.json | awk '{printf "%.1f", $1/10}') # decimeters to meters
WEIGHT=$(jq '.weight' data.json | awk '{print $1/10}')          # hectograms to kilograms
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize

# Print in human-readable format
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."

